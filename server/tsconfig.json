{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"es2020"
		],
		"module": "ES2022",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["jest", "node"]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{
			"path": "../shared"
		}
	]
}