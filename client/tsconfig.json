{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": [
			"es2020",
			"dom"
		],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": [
		"src"
	],
	"types": [
		"node"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{
			"path": "../shared"
		}
	]
}